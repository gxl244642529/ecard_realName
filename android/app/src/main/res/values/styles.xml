<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="splash_style" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>

    <style name="AppTheme.Red">
        <item name="android:background">@color/white</item>
    </style>

    <style name="title">
        <item name="android:background">@color/white</item>
    </style>


    <style name="title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="behind_button_style">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/user_alert_size</item>
    </style>

    <style name="main_text">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="title_right_button">
        <item name="android:paddingLeft">@dimen/title_rightButton_padding</item>
        <item name="android:paddingRight">@dimen/title_rightButton_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="list_image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="list_title">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="list_description">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">@dimen/font_size_description</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="default_bottom_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_bottom_button_textSize</item>
    </style>

    <style name="common_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/new_common_btn_bg</item>
        <item name="android:layout_marginLeft">55dip</item>
        <item name="android:layout_marginRight">55dip</item>
    </style>

    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="bottom_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="@android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/bottom_animation</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="PopupMenuButtonText">
        <item name="android:textSize">@dimen/menu_button_text_size</item>
        <item name="android:color">@color/menu_text_color</item>
        <item name="android:drawablePadding">5dip</item>
        <!-- <item name="android:drawableRight">@drawable/tree_menu_down_arraw</item> -->
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="s_title_text">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="s_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="s_spinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/s_spinner_bg</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/s_cart_unselect_ring_color</item>
    </style>

    <style name="my_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CheckPsd" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_psd</item>
    </style>

    <style name="InsuranceCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box_insurance</item>
    </style>

    <style name="AndroidThemeLight" parent="android:Theme.Light"></style>


    <!-- 标准控件开始 -->
    <!-- main button -->
    <style name="_main_button">
        <item name="android:background">@drawable/_main_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dip</item>
        
    </style>
    <!-- select -->

    <style name="_check_box" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/_check_box</item>
    </style>

    <!-- radio group  radio button -->
    <style name="_radio_button">
        <item name="android:button">@drawable/_radio_button</item>
        <item name="android:textColor">@color/_radio_button_text</item>
    </style>
    <!-- radio on/off -->


    <!-- backbutton返回按钮的样式 -->
    <style name="_back">
        <item name="android:layout_width">@dimen/_title_left_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/_title_button_bg</item>
        <item name="android:src">@drawable/_title_left</item>
    </style>
