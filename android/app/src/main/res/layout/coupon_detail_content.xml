<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="162dip"
        android:background="@drawable/coupon_bg"
        android:gravity="top" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/bg_common"
            android:orientation="vertical"
            android:padding="5dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@id/coupon_img"
                        android:layout_width="80dip"
                        android:layout_height="75dip"
                        android:padding="2dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_coupon_logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dip"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@id/coupon_verify_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="刷e通卡即享8折优惠"
                            android:textColor="@color/highlight_text" />

                        <TextView
                            android:id="@id/coupon_period_of_validity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dip"
                            android:text="2014年10月-1024-是"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dip"
                    android:background="@color/common_seperator2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:gravity="right"
                    android:padding="5dip" >

                    <TextView
                        android:id="@id/coupon_used_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:drawableLeft="@drawable/ic_pay_count"
                        android:drawablePadding="5dip"
                        android:gravity="center"
                        android:text="0 人验证" />

                    <TextView
                        android:id="@id/coupon_lifttime_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_left_time"
                        android:drawablePadding="5dip"
                        android:gravity="center"
                        android:text="30天48小时6分" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="77dip"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dip"
            android:layout_marginTop="12dip"
            android:src="@drawable/ic_ecard" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/coupon_img_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/bg_common"
        android:orientation="vertical"
        android:padding="5dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dip" >

            <ImageView
                android:id="@id/business_img0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="10"
                android:adjustViewBounds="true"
                android:background="@color/default_page_color"
                android:scaleType="fitXY"
                android:src="@drawable/default_coupon_logo" />

            <ImageView
                android:id="@id/business_img1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="10"
                android:adjustViewBounds="true"
                android:background="@color/default_page_color"
                android:scaleType="fitXY"
                android:src="@drawable/default_coupon_logo" />

            <ImageView
                android:id="@id/business_img2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="10"
                android:adjustViewBounds="true"
                android:background="@color/default_page_color"
                android:scaleType="fitXY"
                android:src="@drawable/default_coupon_logo" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@id/business_show_more_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:padding="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text="查看更多图片"
                android:textColor="@color/highlight_text"
                android:textSize="12sp" />

            <ImageView
                android:id="@id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        layout="@layout/coupon_shop_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_common"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/coupon_tip"
            android:drawablePadding="10dip"
            android:text="使用须知" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dip"
            android:background="@color/common_seperator2" >
        </ImageView>

        <TextView
            android:id="@id/coupon_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="使用须知"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color_gray" />
    </LinearLayout>

</LinearLayout>