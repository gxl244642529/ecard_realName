<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical" >

    <include layout="@layout/_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/layout_user_info" />

            <RelativeLayout
                android:id="@+id/myEcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_item_selector"
                android:clickable="true"
                android:padding="15dp" >

                <TextView
                    android:id="@id/my_ecard_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_personal_main_query"
                    android:drawablePadding="15dip"
                    android:text="我的e通卡"
                    android:textColor="@color/_title_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10sp"
                android:background="#e7e7e7"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@id/my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_item_selector"
                android:clickable="true"
                android:padding="15dp" >

                <TextView
                    android:id="@id/my_ecard_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_personal_my_order"
                    android:drawablePadding="15dip"
                    android:text="我的购卡"
                    android:textColor="@color/_title_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e7e7e7"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@id/id_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_item_selector"
                android:clickable="true"
                android:padding="15dp" >

                <TextView
                    android:id="@id/my_ecard_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_personal_insurance"
                    android:drawablePadding="15dip"
                    android:text="我的保单"
                    android:textColor="@color/_title_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e7e7e7"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/my_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_item_selector"
                android:clickable="true"
                android:padding="15dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_personal_recharge"
                    android:drawablePadding="15dip"
                    android:text="我的卟噔"
                    android:textColor="@color/_title_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e7e7e7"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@id/my_diy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/new_item_selector"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@id/my_ecard_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:paddingBottom="7dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:src="@drawable/ic_personal_my_diy" />

                <TextView
                    android:id="@id/my_ecard_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/my_ecard_icon"
                    android:text="我的DIY"
                    android:textColor="@color/_title_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10sp"
                android:background="#e7e7e7"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_item_selector"
                android:clickable="true"
                android:padding="15dp" >

                <TextView
                    android:id="@id/my_ecard_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_personal_setting"
                    android:drawablePadding="15dip"
                    android:text="设置"
                    android:textColor="@color/_title_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>