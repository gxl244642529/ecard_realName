                android:gravity="center"
                android:text="周边"
                android:textColor="@color/_title_text_color"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="优惠商家"
        android:textColor="@color/_title_text_color" />

</LinearLayout>