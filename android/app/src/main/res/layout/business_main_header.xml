<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dip" >

        <RelativeLayout
            android:id="@id/type_yi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@drawable/new_item_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="3dip"
                android:drawableTop="@drawable/ic_business_yi"
                android:gravity="center"
                android:text="衣"
                android:textColor="@color/_title_text_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/type_shi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@drawable/new_item_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="3dip"
                android:drawableTop="@drawable/ic_business_shi"
                android:gravity="center"
                android:text="食"
                android:textColor="@color/_title_text_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/type_zhu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@drawable/new_item_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="3dip"
                android:drawableTop="@drawable/ic_business_zhu"
                android:gravity="center"
                android:text="住"
                android:textColor="@color/_title_text_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/type_xing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@drawable/new_item_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="3dip"
                android:drawableTop="@drawable/ic_business_xing"
                android:gravity="center"
                android:text="行"
                android:textColor="@color/_title_text_color"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dip" >

        <RelativeLayout
            android:id="@id/type_gou"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@drawable/new_item_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="3dip"
                android:drawableTop="@drawable/ic_business_gou"
                android:gravity="center"
                android:text="购"
                android:textColor="@color/_title_text_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/type_yu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@drawable/new_item_selector"
