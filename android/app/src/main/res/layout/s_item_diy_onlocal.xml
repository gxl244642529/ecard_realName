<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/s_item_click_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <com.alan.roundimageview.RoundedImageView
            android:id="@id/card_diy_onlocalimage"
            android:layout_width="170dp"
            android:layout_height="106dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            app:corner_radius="4dip"
            app:mutate_background="true"
            app:oval="false" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" >

            <TextView
                android:id="@id/card_diy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dip"
                android:drawableLeft="@drawable/diy_date"
                android:drawablePadding="5dp"
                android:paddingBottom="20dip"
                android:singleLine="true"
                android:text="2510.15.0131"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@id/card_diy_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:drawableLeft="@drawable/diy_delete"
                android:drawablePadding="5dp"
                android:padding="11dp"
                android:text="@string/diy_list_delete"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>