<?xml version="1.0" encoding="utf-8"?>
<com.citywithincity.ecard.widget.UserInfoView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/s_mine_bg" >

    <RelativeLayout
        android:id="@id/id_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="10dip"
        android:background="@drawable/shop_mine_address_selector"
        android:visibility="visible" >

        <ImageView
            android:id="@id/head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/s_img_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/img"
            android:layout_toRightOf="@id/head_img"
            android:orientation="vertical" >

            <TextView
                android:id="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/s_ic_addr"
                android:drawablePadding="5dp"
                android:gravity="bottom"
                android:text="收货地址维护"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/s_ic_expand_addr" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="10dip"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/s_img_head" />

        <TextView
            android:id="@id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/switch_button_up"
            android:clickable="false"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="登录/注册"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>

</com.citywithincity.ecard.widget.UserInfoView>