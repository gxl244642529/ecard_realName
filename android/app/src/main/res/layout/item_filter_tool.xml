<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/s_filter_item_color"
    android:orientation="vertical"
    android:padding="5dip" >

    <ImageView
        android:id="@id/_image_view"
        android:layout_width="@dimen/item_filter_width"
        android:layout_height="@dimen/item_filter_height" />

    <TextView
        android:id="@id/_text_view"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:text="LOMO"
        android:textColor="@color/editor_text_color" />

</LinearLayout>