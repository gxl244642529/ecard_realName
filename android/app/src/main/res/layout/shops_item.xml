<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dip"
    android:paddingTop="5dip" >

    <LinearLayout
        android:id="@id/shop_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/shop_phone"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/coupondetail_shop1_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="豪客来厦门海沧未来海岸店" />

        <TextView
            android:id="@+id/coupondetail_shop1_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="未来海岸阿罗旋转木马旁"
            android:textColor="@color/text_color_gray" />

        <TextView
            android:id="@id/shop_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_distance"
            android:drawablePadding="5dip"
            android:padding="5dip"
            android:text="4km"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color_gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/seprator"
        android:layout_width="1px"
        android:layout_height="82dip"
        android:layout_toLeftOf="@id/shop_phone"
        android:background="@color/common_seperator2" >
    </ImageView>

    <LinearLayout
        android:id="@id/shop_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/item_selector"
        android:clickable="true" >

        <ImageView
            android:layout_width="50dip"
            android:layout_height="82dip"
            android:clickable="false"
            android:scaleType="center"
            android:src="@drawable/ic_phone" />
    </LinearLayout>

</RelativeLayout>