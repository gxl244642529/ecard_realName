<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_title_bottom"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn" >

        <ImageView
            android:id="@id/_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/f4" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@id/_bottom_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dip"
        android:background="@drawable/begin_app"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@id/_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="15dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:layout_width="10dip"
                android:layout_height="2dip"
                android:layout_marginRight="7dip"
                android:background="#CCCCCC" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="2dip"
                android:layout_marginRight="7dip"
                android:background="#CCCCCC" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="2dip"
                android:layout_marginRight="7dip"
                android:background="#CCCCCC" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="2dip"
                android:background="#FF5C4B" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>