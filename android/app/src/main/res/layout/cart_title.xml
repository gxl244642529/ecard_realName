<?xml version="1.0" encoding="utf-8"?>
<com.citywithincity.ecard.widget.CartTitle xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/_title_right"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:background="@drawable/title_button_bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:src="@drawable/s_btn_cart" />

    <RelativeLayout
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignTop="@id/icon"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="-6dp"
        android:layout_toRightOf="@id/icon" >

        <ImageView
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_centerInParent="true"
            android:background="@drawable/s_cart_card_num" />

        <TextView
            android:id="@id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="88"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </RelativeLayout>

</com.citywithincity.ecard.widget.CartTitle>