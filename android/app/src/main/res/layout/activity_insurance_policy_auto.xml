<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <include layout="@layout/insurance_other_policy_header" />
            
            <RelativeLayout
                android:id="@id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="15dp" >

        <TextView
            android:id="@id/id_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="被保险人"
            android:textColor="@color/text_default_color"
            android:textSize="15sp" />
        
        <TextView
            android:id="@id/insured1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/insured_id1"
            android:paddingRight="15dp"
            android:textColor="@color/text_default_color"
            android:textSize="15sp" />

        <TextView
            android:id="@id/insured_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_gray"
            android:textSize="15sp" />

    </RelativeLayout>
    
            <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/new_divider_color" />
            
            <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="保障车辆"
            android:textColor="@color/text_default_color"
            android:textSize="15sp" />

        <TextView
            android:id="@id/car_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_gray"
            android:textSize="15sp" />

    </RelativeLayout>
    
            <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/new_divider_color" />
            
            <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="车辆VIN码"
            android:textColor="@color/text_default_color"
            android:textSize="15sp" />

        <TextView
            android:id="@id/car_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_gray"
            android:textSize="15sp" />

    </RelativeLayout>
    
            <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/new_divider_color" />
            
            <include layout="@layout/insurance_other_policy_footer"/>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>