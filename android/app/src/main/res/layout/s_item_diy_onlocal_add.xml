<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/s_item_click_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <com.alan.roundimageview.RoundedImageView
            android:id="@id/card_diy_onlocalimage_add"
            android:layout_width="170dp"
            android:layout_height="106dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/diy_pages"
            app:corner_radius="4dip"
            app:mutate_background="true"
            app:oval="false" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_transparent"
            android:gravity="center_vertical"
            android:padding="11dp"
            android:text="定制我的卡"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>