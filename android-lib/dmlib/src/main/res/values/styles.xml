    </style>
    <!-- select -->

    <style name="_check_box" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/_check_box</item>
    </style>

    <!-- radio group  radio button -->
    <style name="_radio_button">
        <item name="android:button">@drawable/_radio_button</item>
        <item name="android:textColor">@color/_radio_button_text</item>
    </style>
    <!-- radio on/off -->


    <!-- backbutton返回按钮的样式 -->
    <style name="_back">
        <item name="android:layout_width">@dimen/_title_left_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/_title_button_bg</item>
        <item name="android:src">@drawable/_title_left</item>
    </style>
